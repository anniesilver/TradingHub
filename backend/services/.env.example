# Database Configuration
# This database name should match what you created with: createdb tradinghub
DB_NAME=tradinghub
DB_USER=postgres
DB_PASSWORD=your_password
DB_HOST=localhost
DB_PORT=5432

# Alternative: Full database URL (overrides above settings if set)
# DATABASE_URL=postgresql://postgres:your_password@localhost:5432/tradinghub

# IBKR Configuration
# Make sure TWS/IB Gateway is running with API enabled
IBKR_HOST=127.0.0.1
IBKR_PORT=7496
IBKR_CLIENT_ID=123

# Auto refresh data flag
AUTO_REFRESH_DATA=true

# Flask Configuration (optional - for production)
# SECRET_KEY=your-super-secret-key-change-in-production
# JWT_SECRET_KEY=your-jwt-secret-key-change-in-production